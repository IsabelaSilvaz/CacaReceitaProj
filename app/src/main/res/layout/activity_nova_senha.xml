<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".novaSenha">
    <ImageView
        android:id="@+id/chefinho3"
        android:layout_width="147dp"
        android:layout_height="129dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126"
        app:srcCompat="@drawable/chefinho" />

    <ImageView
        android:id="@+id/sair3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073"
        app:srcCompat="@drawable/setadesaida" />

    <ImageView
        android:id="@+id/det3"
        android:layout_width="506dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/det1" />


    <Button
        android:id="@+id/ContinuarCriarNovaSenha"
        android:layout_width="158dp"
        android:layout_height="61dp"
        android:backgroundTint="#FF8716"
        android:text="Continuar "
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans_bold"
        android:shadowColor="#5A0808"
        android:text=" Criar Nova senha"
        android:textColor="#B13D0C"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="369dp"
        android:layout_height="39dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:gravity="center"
        android:shadowColor="#0000AD"
        android:text="Insira sua nova senha nos campos abaixo "
        android:textColor="#B13D0C"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="247dp"
        android:layout_height="20dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:shadowColor="#0000AD"
        android:text="Criar nova senha:"
        android:textColor="#B13D0C"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="261dp"
        android:layout_height="24dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:shadowColor="#0000AD"
        android:text="Confirmar senha:"
        android:textColor="#B13D0C"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <EditText
        android:id="@+id/InputNovaSenha"
        android:layout_width="257dp"
        android:layout_height="49dp"
        android:background="@drawable/estiloinput_esqueceusenha"
        android:ems="10"
        android:fontFamily="@font/josefin_sans"
        android:hint="*Digite sua nova senha "
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#80B13D0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/InputConfirmaçãoSeha"
        android:layout_width="257dp"
        android:layout_height="49dp"
        android:background="@drawable/estiloinput_esqueceusenha"
        android:ems="10"
        android:fontFamily="@font/josefin_sans"
        android:hint="*Digite sua senha "
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#80B13D0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.649"


        />

</androidx.constraintlayout.widget.ConstraintLayout>