<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AssinaturaActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:itemIconTint="#B13D0C"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B13D0C"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/logo_cacareceita2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_cacareceita2" />

    <ImageView
        android:id="@+id/Sair2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/imagem_telaassinatura" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Assine agora mesmo o premium e aproveite sem limites!"
        android:textAlignment="center"
        android:textColor="#FF8716"
        android:textSize="18dp" />

    <View
        android:id="@+id/view"
        android:layout_width="363dp"
        android:layout_height="292dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        android:background="@drawable/estilo_bordasublinhada" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="290dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Vantagens"
        android:textColor="#1A2300"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/icon_verificado" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="353dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Veja suas receitas sem anuncios te atrapalando!"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        app:srcCompat="@drawable/icon_verificado" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="275dp"
        android:layout_height="37dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="402dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Salve quantas receitas você quiser no seu livro de receitas!"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="450dp"
        app:srcCompat="@drawable/icon_verificado" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="453dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Compartilhe com todos a sua receita!"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="510dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:shadowDx="1000"
        android:shadowDy="20"
        android:shadowRadius="100"
        android:text="A partir de  R$ 9,90"
        android:textColor="#FF8716" />

    <Button
        android:id="@+id/botao_assineJa"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="590dp"
        android:backgroundTint="#B13D0C"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Assine já"
        android:textSize="16dp" />

</FrameLayout>